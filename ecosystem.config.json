{
    "apps": [
        {
            "name": "senior-citizen-portal-api",
            "script": "./dist/server.js",
            "instances": "max",
            "exec_mode": "cluster",
            "env": {
                "NODE_ENV": "production"
            },
            "error_file": "./logs/pm2-error.log",
            "out_file": "./logs/pm2-out.log",
            "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
            "merge_logs": true,
            "max_memory_restart": "1G",
            "autorestart": true,
            "watch": false,
            "ignore_watch": [
                "node_modules",
                "logs",
                ".git"
            ],
            "max_restarts": 10,
            "min_uptime": "10s",
            "listen_timeout": 3000,
            "kill_timeout": 5000,
            "wait_ready": true,
            "shutdown_with_message": true,
            "cron_restart": "0 3 * * *",
            "log_type": "json"
        }
    ]
}